{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Code Template Catalog",
  "description": "Schema for code template catalog with version and dependency information",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp in ISO 8601 format"
    },
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "category", "path"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the template"
          },
          "name": {
            "type": "string",
            "description": "Display name of the template"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the template"
          },
          "category": {
            "type": "string",
            "enum": ["Frontend", "Backend", "Fullstack", "Data Science", "Mobile", "Other"],
            "description": "Primary category of the template"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of tags for searching and categorization"
          },
          "path": {
            "type": "string",
            "description": "Relative path to the template directory"
          },
          "version": {
            "type": "string",
            "description": "Template version in semver format"
          },
          "minRuntimeVersion": {
            "type": "string",
            "description": "Minimum required runtime version"
          },
          "dependencies": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Key-value pairs of dependencies and their versions"
          },
          "compatibility": {
            "type": "object",
            "properties": {
              "node": {
                "type": "string",
                "description": "Node.js version compatibility"
              },
              "python": {
                "type": "string",
                "description": "Python version compatibility"
              },
              "dotnet": {
                "type": "string",
                "description": ".NET SDK version compatibility"
              },
              "ruby": {
                "type": "string",
                "description": "Ruby version compatibility"
              }
            }
          },
          "maintainer": {
            "type": "string",
            "description": "Maintainer or team responsible for the template"
          },
          "repository": {
            "type": "string",
            "format": "uri",
            "description": "URL to the template's source repository"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp in ISO 8601 format"
          },
          "isDeprecated": {
            "type": "boolean",
            "default": false,
            "description": "Whether the template is deprecated"
          },
          "deprecationMessage": {
            "type": "string",
            "description": "Message explaining deprecation and migration path"
          }
        }
      }
    }
  },
  "required": ["templates"]
}
